<Window x:Class="Zelentsov_eyes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zelentsov_eyes"
        mc:Ignorable="d"
        Title="Зеленцов Глазки" FontFamily="Century Gothic" Height="450" Width="850" 
        MinHeight="450" MinWidth="800"
        MaxHeight="1000"
        Icon="src/Глазки-save.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Source="src/Глазки-save.png" Grid.Row="0" HorizontalAlignment="Left" Width="80"/>
        <TextBlock Text="Глазки Save" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"/>
        <Button Width="120" Height="25" Content="Назад" VerticalAlignment="Center" Name="BackBtn" HorizontalAlignment="Right" Margin="0 0 20 0" Click="BackBtn_Click"/>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"/>
    </Grid>
</Window>
