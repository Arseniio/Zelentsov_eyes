<Page x:Class="Zelentsov_eyes.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zelentsov_eyes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10 0 0 0" Grid.Row="0" VerticalAlignment="Center" FontSize="20" Text="Наименование"/>
        <TextBox Grid.Column="1" Width="210" Height="35"/>

        <TextBlock Margin="10 0 0 0" Grid.Row="1" VerticalAlignment="Center" FontSize="20" Text="Адрес"/>
        <TextBox Grid.Row="1" Grid.Column="1" Width="210" Height="35"/>


        <TextBlock Margin="10 0 0 0" Grid.Row="2" VerticalAlignment="Center" FontSize="20" Text="Директор"/>
        <TextBox Grid.Row="2" Grid.Column="1" Width="210" Height="35"/>

        <TextBlock Margin="10 0 0 0" Grid.Row="4" VerticalAlignment="Center" FontSize="20" Text="Логотип"/>

        <TextBlock Margin="10 0 0 0" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontSize="20" Text="Директор"/>
        <TextBox Grid.Row="0" Grid.Column="3" Width="210" Height="35"/>

        <TextBlock Margin="10 0 0 0" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontSize="20" Text="Директор"/>
        <TextBox Grid.Row="1" Grid.Column="3" Width="210" Height="35"/>
        <TextBlock Margin="10 0 0 0" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" FontSize="20" Text="Директор"/>
        <TextBox Grid.Row="2" Grid.Column="3" Width="210" Height="35"/>
        <TextBlock Margin="10 0 0 0" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" FontSize="20" Text="Директор"/>
        <TextBox Grid.Row="3" Grid.Column="3" Width="210" Height="35"/>
        <TextBlock Margin="10 0 0 0" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" FontSize="20" Text="Директор"/>
        <TextBox Grid.Row="4" Grid.Column="3" Width="210" Height="35"/>
        <TextBlock Margin="10 0 0 0" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" FontSize="20" Text="Директор"/>
        <TextBox Grid.Row="5" Grid.Column="3" Width="210" Height="35"/>
        <TextBlock Margin="10 0 0 0" Grid.Row="6" Grid.Column="2" VerticalAlignment="Center" FontSize="20" Text="Директор"/>
        <TextBox Grid.Row="6" Grid.Column="3" Width="210" Height="35"/>

    </Grid>
</Page>
